---
// import Footer from '@components/Footer.astro';
import Navbar from "../components/Navigation.astro";
import { SEO } from "astro-seo";

export interface mainLayoutProps {
  title: string;
  seoDesc: string;
  seoTitle: string;
}

const { title, seoDesc, seoTitle } = Astro.props as mainLayoutProps;
---

<!doctype html>
<html lang="en" class="scroll-smooth" data-testid="html">
  <head>
    <SEO
      title={seoTitle}
      description={seoDesc}
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
  </head>
  <body
    class="mx-auto container h-screen bg-slate-50 px-5 font-sans text-white dark:bg-zinc-900 xs:text-[16px] md:text-[18px]"
  >
    <Navbar />
    <main
      class="mx-auto max-w-[700px] px-6 pb-24 pt-16 md:px-6 md:pb-44 md:pt-20"
    >
      <div class="flex flex-col gap-16 md:gap-24">
        <slot />
      </div>
    </main>
    <!-- <Footer /> -->
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>