---
import { Image } from "astro:assets";

interface Props {
  title?: string;
  description?: string;
  src: ImageMetadata;
  alt: string;
}

const { title, description, src, alt } = Astro.props as Props;
---

<div
  class="border-2 border-purple-500/0 hover:border-purple-500 hover:border-2 transition-colors duration-300 rounded-3xl lg:col-span-1 col-span-3 p-8 overflow-hidden bg-zinc-800/50"
>
  <div class="flex flex-col justify-end max-h-[168px] max-w-[384px]">
    <Image
      src={src}
      alt={alt}
      class="drop-shadow-lg object-cover invert mb-3"
      width={24}
      height={24}
    />
    <h2 class="font-semibold text-slate-50">{title}</h2>
    <p class="text-zinc-300 text-sm text-pretty mt-1">{description}</p>
  </div>
</div>
