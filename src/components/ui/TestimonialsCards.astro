---
import { Image } from "astro:assets";

interface Props {
  quote: string;
  img: ImageMetadata;
  name: string;
  job?: string;
}

const { quote, img, name, job } = Astro.props as Props;
---

<div class="bg-zinc-900 text-slate-50 p-6 rounded-3xl col-span-1 max-w-md">
  <q class="text-zinc-400">
    {quote}
  </q>
  <div class="mt-10 flex space-x-2 items-center">
    <Image src={img} alt="pp" width={46} height={46} class="rounded-full" />
    <div class="flex flex-col">
      <span class="font-bold">{name}</span>
      <span class="text-zinc-500 text-sm">{job}</span>
    </div>
  </div>
</div>
