---
import { Image } from "astro:assets";
import astro from "../assets/astro-light.svg";

interface ImagesItems {
  src: ImageMetadata;
  alt: string;
}

const imageItems: ImagesItems[] = [
  {
    src: astro,
    alt: "astro logo",
  },
  {
    src: astro,
    alt: "astro logo",
  },
  {
    src: astro,
    alt: "astro logo",
  },
  {
    src: astro,
    alt: "astro logo",
  },
  {
    src: astro,
    alt: "astro logo",
  },
];
---

<section id="trusted" class="p-8">
  <div
    class="relative w-full max-w-7xl max-h-[800px] mx-auto py-24 lg:py-40 px-8 md:px-12 lg:px-16 xl:px-40"
  >
    <div class="pb-12 font-light text-xl text-center">
      <span class="text-purple-500">Trusted by the Best.</span>
      <h2 class="mt-6 tracking-normal text-slate-50">
        Astro is the go-to solution
      </h2>
      <span class="text-zinc-400"
        >for rapidly deploying online content for institutions and organizations
        worldwide.</span
      >
    </div>
    <div class="mt-6 overflow-hidden border-t border-b border-white/10">
      <div class="flex -ml-8 lg:-ml-4 animate-scroll">
        {
          imageItems.concat(imageItems).map((item) => (
            <div class="mt-4 flex-shrink-0 ml-8 lg:ml-4 flex-grow lg:flex-grow-0">
              <Image src={item.src} alt={item.alt} class=" object-contain" />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
