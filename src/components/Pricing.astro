---
import PricingCards from "./ui/PricingCards.astro";

interface PricingItems {
  title: string;
  description: string;
  price: string;
  button: string;
  li: string[];
  variant: "default" | "primary";
}

const pricingItems: PricingItems[] = [
  {
    title: "Basic plan",
    description: "For your hobby projects",
    price: "$0",
    button: "Get Started",
    li: [
      "Up to 10 projects",
      "Access to all basic templates",
      "Basic analytics",
      "Email support",
      "1 GB of storage",
    ],
    variant: "default",
  },
  {
    title: "Pro plan",
    description: "For growing businesses",
    price: "$49",
    button: "Get Started",
    li: [
      "Up to 50 projects",
      "Access to premium templates",
      "Advanced analytics",
      "Priority email support",
      "10 GB of storage",
      "Custom domain support",
    ],
    variant: "primary",
  },
  {
    title: "Premium Plan",
    description: "For multiple teams",
    price: "$99",
    button: "Get Started",
    li: [
      "Unlimited projects",
      "Access to all templates",
      "Comprehensive analytics",
      "24/7 dedicated support",
      "100 GB of storage",
      "Custom domain support",
      "Team collaboration tools",
      "Onboarding and training",
    ],
    variant: "default",
  },
];
---

<section id="pricing" class="p-8 flex items-center justify-center">
  <div
    class="relative w-full max-w-7xl mx-auto py-24 lg:py-40 px-8 md:px-12 lg:px-16 xl:px-40"
  >
    <div class="mb-24 text-xl text-center tracking-tight">
      <span class="text-purple-500">Flexible Pricing Plans.</span>
      <h2 class="mt-6 text-3xl text-slate-50 font-bold">
        Astro Framework offers tailored solutions.
      </h2>
      <div class="mt-4">
        <span class="text-zinc-400"
          >Astro offers pricing plans to suit your needs. From our Free Plan for
          beginners to Pro and Premium Plans for professionals and large-scale
          projects, each plan includes engaging features and tools. Build fast,
          responsive websites with ease using Astro Framework.</span
        >
      </div>
    </div>
    <div class="grid grid-cols-3 gap-3 h-full">
      {
        pricingItems.map((item) => (
          <PricingCards
            title={item.title}
            description={item.description}
            price={item.price}
            button={item.button}
            li={item.li}
            variant={item.variant}
          />
        ))
      }
    </div>
  </div>
</section>
