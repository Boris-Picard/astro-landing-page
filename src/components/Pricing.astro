---
import PricingCards from "./ui/PricingCards.astro";

interface PricingItems {
  title: string;
  description: string;
  price: string;
  button: string;
  li: string[];
  variant: "default" | "primary";
}

const pricingItems: PricingItems[] = [
  {
    title: "Basic plan",
    description: "For your hobby projects",
    price: "$0",
    button: "Get Started",
    li: [
      "Up to 10 projects",
      "Access to all basic templates",
      "Basic analytics",
      "Email support",
      "1 GB of storage",
    ],
    variant: "default",
  },
  {
    title: "Pro plan",
    description: "For growing businesses",
    price: "$49",
    button: "Get Started",
    li: [
      "Up to 50 projects",
      "Access to premium templates",
      "Advanced analytics",
      "Priority email support",
      "10 GB of storage",
      "Custom domain support",
    ],
    variant: "primary",
  },
  {
    title: "Premium Plan",
    description: "For multiple teams",
    price: "$99",
    button: "Get Started",
    li: [
      "Unlimited projects",
      "Access to all templates",
      "Comprehensive analytics",
      "24/7 dedicated support",
      "100 GB of storage",
      "Custom domain support",
      "Team collaboration tools",
      "Onboarding and training",
    ],
    variant: "default",
  },
];
---

<section id="pricing" class="p-8">
  <div
    class="relative w-full max-w-7xl max-h-[800px] mx-auto py-24 lg:py-40 px-8 md:px-12 lg:px-16 xl:px-40"
  >
    <div class="pb-24 font-light text-xl text-center">
      <span class="text-purple-500">Flexible Pricing Plans.</span>
      <h2 class="mt-6 tracking-normal text-slate-50">
        Astro offers scalable solutions tailored to your needs,
      </h2>
      <span class="text-zinc-400"
        >providing the best value for institutions and organizations worldwide.</span
      >
    </div>
    <div class="grid grid-cols-3 gap-3">
      {
        pricingItems.map((item) => (
          <PricingCards
            title={item.title}
            description={item.description}
            price={item.price}
            button={item.button}
            li={item.li}
            variant={item.variant}
          />
        ))
      }
    </div>
  </div>
</section>
