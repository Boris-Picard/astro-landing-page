---
import { Image } from "astro:assets";
import profilPicture from "../assets/IMG_0948bis.jpg";

export interface ImageItem {
  altText: string;
}

const imageItem: ImageItem = 
  {
    altText: "Boris Picard Profil",
  };

---

<section data-testid="home" class="p-10 bg-zinc-800 rounded-3xl">
  <div class="grid grid-cols-2">
    <div class="grid grid-cols-2">
      <div class="col-span-2 my-auto space-y-8">
        <h1 class="text-slate-50 font-black text-5xl">Boris Picard</h1>
        <p class="text-slate-50 font-semibold text-xl prose">
          <span class="text-[#EF8801]">Développeur web</span> à Amiens, je crée des
          <span class="text-[#EF8801]">sites</span> et <span
            class="text-[#EF8801]">applications web</span
          > en utilisant des <span class="text-[#EF8801]"
            >technologies modernes</span
          >.
        </p>
        <button class="bg-zinc-600 rounded-xl p-3">Accéder à mon CV</button>
      </div>
    </div>
    <div class="col-span-1 flex justify-end">
      {
          <Image
            src={profilPicture}
            alt={imageItem.altText}
            width="250"
            height="250"
            class="rounded-3xl object-cover"
          />
      }
    </div>
  </div>
</section>
